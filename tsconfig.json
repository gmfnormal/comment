{
    "compilerOptions": {
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "moduleResolution": "node",
        "jsx": "react",
        "module": "es6",
        "target": "es5",
        "lib": [
            "es5",
            "dom"
        ],
        "types": [
            "node",
            "jest"
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "stories/**/*/ts",
        "stories/**/*/tsx",
    ],
    "exclude": [
        "node_modules",
        "src/**/*.test.tsx",
        "src/**/*.test.ts",
        "src/demo/*.*"
    ]
}